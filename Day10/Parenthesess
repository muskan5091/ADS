class Solution {
    List<String> pairs;
    public List<String> generateParenthesis(int n) {
        pairs = new ArrayList<>();
        generate(0, 0, n, new StringBuilder());
        return pairs;
    }

    public void generate(int open, int closed, int n, StringBuilder str){

        if(n*2 == str.length()){
            pairs.add(str.toString());
            return;
        }

        if(open < n){
            str.append("(");
            generate(open+1, closed, n, str);
            str.deleteCharAt(str.length()-1);
        }

        if(closed < open){
            str.append(")");
            generate(open, closed+1, n, str);
            str.deleteCharAt(str.length()-1);
        }
    }
}
